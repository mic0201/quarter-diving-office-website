    padding 0 1rem

.bg-mask
  position absolute
  top 0
  left 0
  width 100vw
  height 100vh
  &::before
    content ''
    position absolute
    z-index 4
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.3)

.fakeDiv
  opacity 0
  visibility hidden

.grid
  display grid

.flex
  display flex
  &.inline
    display inline-flex
  &.column
    flex-direction column
  &.v-center
    align-items center
  &.h-center
    justify-content center
  &.between
    justify-content space-between
  &.evenly
    justify-content space-evenly
  &.around
    justify-content space-around
  &.flex-start
    justify-content flex-start
  &.flex-end
    justify-content flex-end
  &.center-center
    justify-content center
    align-items center
  &.align-flex-end
    align-items flex-end
  &.align-flex-start
    align-items flex-start
  &.wrap
    flex-wrap: wrap

.pointer
  cursor pointer
.underline
  text-decoration underline

.event-none
  pointer-events none
.comingsoon
  position relative
  pointer-events none
  opacity 0.4

.fus-input
  position relative
  -webkit-appearance none
  background-color #FFF
  background-image none
  border-radius 4px
  border 1px solid main_c
  box-sizing border-box
  color #606266
  display inline-block
  font-size inherit
  height 44px
  line-height 44px
  &.small
    height 33px
    line-height 33px
  outline 0
  padding 10px 20px
  transition border-color .2s cubic-bezier(.645,.045,.355,1)
  width 100%
  &.simple
    box-shadow 0 3px 6px 0 rgba(0, 0, 0, 0.16)
    border 0
  &.danger
    border 1px solid danger_c
  &:focus
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.16)
  &[disabled]
    background-color footer_bg_c
    border none
    pointer-events none
  &::placeholder, &::-webkit-input-placeholder
    color #ccc
  &::-webkit-calendar-picker-indicator
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
  &::-webkit-clear-button
    position: absolute
    right: .8rem
    z-index: 1
  &::-webkit-inner-spin-button
    display: none

  &.underscore
    font-size inherit
    border none
    border-radius 0
    border-bottom 1px main_c solid
    margin-right 0.25rem
    &:focus
      box-shadow: 0 0 0 0 #fff

.fus-select-wrapper
  position relative
  &::before
    font-family "Font Awesome 5 Free"
    font-weight 900
    content "\f053"
    font-size .7rem
    position absolute
    z-index 2
    top 50%
    right 0px
    color #434B67
    transform translate(-150%, -50%) rotate(-90deg)
    pointer-events none
  .fus-select
    -webkit-appearance none
    -moz-appearance none
    -ms-appearance none
    -o-appearance none
    appearance none
    padding 0px 30px 0px 20px

.fus-select
  position relative
  background-color #FFF
  background-image none
  border-radius 4px
  border 1px solid main_c
  box-sizing border-box
  color #606266
  display inline-block
  font-size 1rem
  width 100%
  height 44px
  line-height 44px
  outline 0
  transition border-color .2s cubic-bezier(.645,.045,.355,1)
  width 100%
  .el-input
    input 
      padding 0px 20px

  &[disabled]
    background-color footer_bg_c
    border none
    pointer-events none
  &[type="number"]
    text-align center
    text-align-last center

.fus-checkbox
  position relative
  box-sizing border-box
  transform scale(1.5)
  height 35px
  line-height 35px

// 通用按鈕樣式
.fus-btn
  border-radius 4px
  padding .75rem 1.5rem
  font-size 1rem
  cursor pointer
  border none
  outline none
  z-index 50
  transition all .2s
  i
    margin-right .75rem
  // 長型按鈕
  &.long
    padding .75rem 2.75rem
  // 實心按鈕
  &.solid
    color main_c
    background-color second_c
    &:hover
      background-color second_hover_c
  &.solid-main
    color white_c
    background-color main_c
    border solid 1px main_c
    &:hover
      color main_c
      background-color white_c
      border solid 1px main_c
  &.solid-success
    color white_c
    background-color success_c
    border solid 1px success_c
  // 空心白邊框
  &.hollow-light
    color white_c
    border solid 1px white_c
    background-color rgba(0,0,0,0)
    &:hover
      color main_c
      background-color white_c
  // 空心主色邊框
  &.hollow-main
    color main_c
    border solid 1px main_c
    background-color rgba(0,0,0,0)
    &.fill:not([disabled])
      background-color: white
    &:hover:not([disabled])
      color white_c
      background-color main_c
  // 取消|負面按鈕
  &.danger
    color white_c
    background-color danger_c
    &:hover
      background-color danger_hover_c
  &.success
    color white_c
    background-color success_c
  // 禁用按鈕
  &.disabled, &[disabled]
    cursor not-allowed
    color white_c
    background-color disabled_c
    border 0
    pointer-events none
    &:hover
      background-color disabled_c
  // 下劃線樣式
  &.underscore
    color main_c
    background-color transparent
    text-decoration underline
    padding-left 0
    padding-right 0
    &.disabled, &[disabled]
      opacity .3
      &:hover
        background-color transparent

  // 樣式參數
  &.long
    min-width 168px
  &.full
    width 100%
  &.fitSize
    padding .75em 1.5em
    font-size inherit

.currency
  font-size .9rem
  font-weight 700

.card-shadow
  border-radius 4px
  box-shadow 0 3px 6px rgba(0, 0, 0, 0.16)

.errorMsg
  color danger_c

