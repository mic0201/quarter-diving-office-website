  max-width 1440px
  margin auto
  @media screen and (max-width: 1440px)
    padding 0 1rem

.main-container-max1200
  max-width 1200px
  margin auto
  @media screen and (max-width: 1200px)
    padding 0 1rem

.main-container-max800
  max-width 800px
